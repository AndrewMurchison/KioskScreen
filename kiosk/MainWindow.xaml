<Window x:Class="kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kiosk"
        mc:Ignorable="d"
        Title="MainWindow"
        Background="#FF010172"
        
        >
    <UserControl>
        <UserControl.Resources>

            <Style x:Key="borders" TargetType="Border">
                <Setter Property="BorderBrush" Value="DarkGray"></Setter>
                <Setter Property="BorderThickness" Value="2"></Setter>
                <Setter Property="Margin" Value="5"></Setter>
                <Setter Property="Background" Value="LightGray"></Setter>
            </Style>

        </UserControl.Resources>
        <Grid Name="MainGrid" Margin="10" Loaded="homescreenctrl">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"></ColumnDefinition>
                <ColumnDefinition Width="50*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--LeftSideBar-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"></RowDefinition>
                    <RowDefinition Height="50*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Style="{StaticResource borders}">
                    <StackPanel Orientation=" Vertical"></StackPanel>
                </Border>
                <Border Grid.Row="1" Style="{StaticResource borders}">
                    <StackPanel Orientation=" Vertical"></StackPanel>
                </Border>
            </Grid>
            <!--LeftSideBarEnd-->

            <!--MiddleSection-->
            <Border Grid.Column="1" Style="{StaticResource borders}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*"></RowDefinition>
                        <RowDefinition Height="20*"></RowDefinition>
                        <RowDefinition Height="50*"></RowDefinition>
                    </Grid.RowDefinitions>
                        
                    <!--Greeting/Time-->
                        <Border Grid.Row="0" Margin="0,30" Background="#FFDEDEDE" BorderBrush="DarkGray" BorderThickness="0,1">
                        <Viewbox>   
                        <StackPanel Orientation="Vertical">
                        <ItemsControl ItemsSource = "{Binding Path = Home}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock TextAlignment="Center" FontSize="26" Text="{Binding Path=Greeting, Mode=OneWay}">
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Name="time" FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black">
                        </TextBlock>
                        </StackPanel>
                        </Viewbox>
                        </Border>
                    <!--Greeting/Time-->

                    <Border  Margin="30,0"  Grid.Row="1" Background="#FFDEDEDE" BorderBrush="DarkGray" BorderThickness="1">
                        <Viewbox HorizontalAlignment="Left">
                          <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ticket#: "></TextBlock>
                                    <Border>
                                        <TextBlock>1234-3</TextBlock>     
                                     </Border>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Validations: "></TextBlock>
                                <Border>
                                    <TextBlock>HP</TextBlock>
                                 </Border>
                                </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Amount Due: "></TextBlock>
                                <Border>
                                        <TextBlock>$400.53</TextBlock>
                                </Border>
                                </StackPanel>
                        </StackPanel>
                        </Viewbox> 
                    </Border>
                    
                </Grid>
            </Border>
            <!--End of MiddleSection-->

            <!--RightSidebar-->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"></RowDefinition>
                    <RowDefinition Height="50*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Style="{StaticResource borders}">

                </Border>
                <Border Grid.Row="1" Style="{StaticResource borders}">

                </Border>


            </Grid>
            <!--RightSidebarEnd-->
        </Grid>

    </UserControl>
</Window>