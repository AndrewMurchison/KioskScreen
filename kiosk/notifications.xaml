<Window x:Class="kiosk.notifications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kiosk"
        mc:Ignorable="d"
        Background="#FFDEDEDE"
        ResizeMode="NoResize"
        WindowStyle="None"
        
       
        Title="notifications" Height="300" Width="600">
    <Border CornerRadius="5" BorderBrush="#FFA09F9F"
        BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="60*"></RowDefinition>
                <RowDefinition Height="20*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Row="0" Source="paycelogo.png" />
            <Border Grid.Row="1" Margin="100,30">
                
            <TextBlock VerticalAlignment="Center" FontSize="20" TextWrapping="Wrap" Name="message" TextAlignment="Center" FontFamily="Segoe UI Light">
            
            </TextBlock>
        
        </Border>
        </Grid>
    </Border>
</Window>
